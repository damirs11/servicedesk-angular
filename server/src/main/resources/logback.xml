<configuration scan="true" packagingData="true" scanPeriod="30 seconds">
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>windows-1251</charset>
            <pattern>- %d{yyyy.MM.dd HH:mm:ss.SSS};%-5level;%X{app_user};%X{app_host};%thread;%X{app_query};[%logger{80}-%line] - %msg%n</pattern>
        </encoder>
        <!--rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/opt/apache-tomcat-8.0.33/logs/usim-%d{yyyy-MM-dd}(%i).zip</fileNamePattern>
            <maxFileSize>15MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy-->
    </appender>

    <logger name="ru.it" level="ALL"/>
    <!--logger name="org.springframework.security" level="DEBUG"/-->

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>